<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >


    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="头像" />
            <!--<ImageView style="@style/img_arrow"/>-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_down_blue_grey_300_18dp"
                android:id="@+id/id_setting_personfile_image"
                android:background="@color/White"
                />
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/setting_nickname">
            <TextView style="@style/usertext" android:text="昵称" />
            <!--<ImageView style="@style/img_arrow"/>-->
            <TextView style="@style/usertext" android:text="江一航"
                android:id="@+id/id_setting_textview_nickname"
                android:gravity="center"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout" android:id="@+id/setting_gender">
            <TextView style="@style/usertext" android:text="性别" />
            <!--<ImageView style="@style/img_arrow"/>-->
            <TextView style="@style/usertext" android:text=""
                android:id="@+id/id_setting_textview_gender"
                android:gravity="center"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/id_setting_personalfile_signature">
            <TextView style="@style/usertext" android:text="个性签名" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/id_setting_personalfile_introduction">
            <TextView style="@style/usertext" android:text="个人简介" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout" android:id="@+id/setting_region" android:orientation="horizontal">
            <TextView style="@style/usertext" android:text="居住地"
                />

            <!--<ImageView style="@style/img_arrow"/>-->
            <!--<TextView style="@style/usertext" android:text="湖北 武汉"-->
                <!--android:id="@+id/id_setting_textview_region"-->
                <!--android:gravity="center"/>-->
            <!--<ImageView style="@style/img_arrow"/>-->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"

                >
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:id="@+id/sp_province"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    ></Spinner>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:id="@+id/sp_city"
                    android:layout_weight="2"

                    ></Spinner>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:id="@+id/sp_area"
                    android:layout_weight="3"


                    ></Spinner>
            </LinearLayout>


        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout" android:id="@+id/setting_major">
            <TextView style="@style/usertext" android:text="擅长学科" />
            <!--<ImageView style="@style/img_arrow"/>-->
            <TextView style="@style/usertext" android:text="语文 数学"
                android:id="@+id/id_setting_textview_major"
                android:gravity="center"
                />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout" android:id="@+id/setting_school">
            <TextView style="@style/usertext" android:text="所属大学" />
            <!--<ImageView style="@style/img_arrow"/>-->
            <TextView style="@style/usertext" android:text="武汉大学"
                android:id="@+id/id_setting_textview_school"
                android:gravity="center" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:id="@+id/ll_quit"
        >
        <LinearLayout style="@style/single_layout"
            >
            <TextView style="@style/usertext"
                android:text="退出当前账号"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

