<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:id="@+id/ll_answer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_answer_image"
                android:src="@drawable/ic_account_circle_blue_600_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView

                android:id="@+id/tv_answer_name"
                android:textColor="@android:color/black"
                android:text="姓名"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <ImageButton
                android:background="@android:color/transparent"
                android:layout_alignBottom="@id/ll_answer"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/ib_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_issue_title"
            android:textSize="18sp"
            android:text="问题"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_answer_content"
            android:text="我是内容啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:inputType="textMultiLine"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_agree"
                android:text="1人赞同"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_time"
                android:textColor="@android:color/darker_gray"
                android:text="time"
                android:layout_marginEnd="20dp"
                android:layout_alignBottom="@id/tv_agree"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>